@model WebBanHang.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Are you sure you want to delete this product?</h1>

<div>
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
    <p>@Model.Price</p>
</div>

<form method="post" action="@Url.Action("DeleteConfirmed", "Product", new { id = Model.Id, area = "Admin" })">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Delete", "Product", new { area = "Admin" })" class="btn btn-secondary">Cancel</a>
</form>
