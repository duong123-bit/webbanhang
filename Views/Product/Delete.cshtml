@model WebBanHang.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="text-danger">Are you sure you want to delete this?</h2>

<div class="card mt-3">
    <div class="card-body">
        <h4>Name: @Model.Name</h4>
        <h4>Price: @Model.Price</h4>
        <h4>Description: @Model.Description</h4>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
